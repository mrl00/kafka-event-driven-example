FROM golang:1.25.1 AS builder

WORKDIR /app

COPY go.mod ./
COPY go.sum ./
RUN go mod download

COPY cmd/order-consumer/main.go ./cmd/order-consumer/main.go
COPY internal/ ./internal/

RUN go build -o /app/order-consumer ./cmd/order-consumer/main.go

FROM debian:bookworm-slim AS runner

EXPOSE 4000

ENV DOCKERIZE_VERSION=v0.9.6

RUN apt-get update \
    && apt-get install -y wget ca-certificates librdkafka1 \
    && wget -O - https://github.com/jwilder/dockerize/releases/download/$DOCKERIZE_VERSION/dockerize-linux-amd64-$DOCKERIZE_VERSION.tar.gz | tar xzf - -C /usr/local/bin \
    && apt-get autoremove -yqq --purge wget && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY --from=builder /app/order-consumer .

CMD ["./order-consumer"]
